func turnCornerToRight() {
    turnRight()
    moveForward()
    turnRight()
}

func turnCornerToLeft() {
    turnLeft()
    moveForward()
    turnLeft()
    
}


func GemRow() {
    while !isBlocked { 
        if isOnGem {
            collectGem()
        }
        moveForward()
    }
    turnCornerToLeft()
}
func SwitchRow() {
    if isOnClosedSwitch {
            while !isBlocked {
                if isOnClosedSwitch {
            toggleSwitch()
        }
        moveForward()
    }
    turnCornerToRight()
}
}

moveForward()
turnRight()

while !isOnOpenSwitch {
    GemRow()
    SwitchRow()
}
